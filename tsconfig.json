{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "auto",
    "isolatedModules": true,

    /* Strictness */
    "strict": false,
    "alwaysStrict": false,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "none",
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./public",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": ["node_modules", "public"]
}
